<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="<%=  blog.coverImageURL %>" width="700px" />
      <pre class="mt-3"><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
      <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="50px" />
      <span><%= blog.createdBy.fullName %></span>
    </div>
    <div class="container mt-3">
      <h1>Comments</h1>
      <% if (locals.user) { %>
      <form class="mt-4" action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mb-3">
          <input
            type="text"
            class="form-text"
            name="content"
            placeholder="Enter your comment...."
          />
          <button type="submit" class="btn btn-sm btn-primary">Submit</button>
        </div>
      </form>
     
      <% } %>
      <div class="mt-3">
        <h1>Comments (<%= comments.length %>) </h1>
        <% comments.forEach(comment => { %>
                <div>
                    <img src="<%=  comment.createdBy.profileImageURL   %>" alt="" width="50px">
                    <span><%=  comment.createdBy.fullName  %> <pre><%= comment.content %> </pre></span>
                </div>
            <% }) %>
      </div>

    </div>
  </body>

  <%- include('./partials/scripts') %>
</html>
