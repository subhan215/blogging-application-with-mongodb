<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Message Notifications</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #495057;
        }

        #notifications {
            margin: 20px auto;
            max-width: 600px;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .notification {
            border-bottom: 1px solid #dee2e6;
            padding: 15px 0;
        }

        .notification:last-child {
            border-bottom: none;
        }

        .notification a {
            color: #007bff;
            text-decoration: none;
        }

        .notification a:hover {
            text-decoration: underline;
        }

        .notification p {
            margin: 0;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <!-- Navbar (Assuming it's included in partials/nav) -->
    <%- include('./partials/nav') %>

    <!-- Notification section -->
    <div id="notifications" class="container">
        <h2 class="text-center mb-4">Message Notifications</h2>
        <% if (messageNotifications.length === 0) { %>
            <p class="text-center">You have no new messages.</p>
        <% } else { %>
            <% messageNotifications.forEach(([senderId, notification]) => { %>
                <div class="notification">
                    <p><a href="/profile/<%= senderId %>/privateMessage"><%= notification.senderName %> has sent you <%= notification.count %> new message(s)!</a></p>
                </div>
            <% }) %>
        <% } %>
    </div>

    <!-- Include Scripts (Assuming it's included in partials/scripts) -->
    <%- include('./partials/scripts') %>
    <!-- Include Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
</body>
</html>
